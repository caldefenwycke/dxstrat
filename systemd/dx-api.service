[Unit]
Description=DarwinX API (for web/)
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/darwinx
EnvironmentFile=/opt/darwinx/config/.env
ExecStart=/opt/darwinx/venv/bin/uvicorn api.app:app --host 0.0.0.0 --port ${API_PORT:-8080}
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
